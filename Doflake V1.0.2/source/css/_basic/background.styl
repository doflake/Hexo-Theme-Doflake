$background_link = hexo-config("basic.background.link")
$background_repeat = convert(hexo-config("basic.background.layout.repeat"))
$background_attachment = convert(hexo-config("basic.background.layout.attachment"))
$background_size = convert(hexo-config("basic.background.layout.size"))
body {
    background-image: url($background_link);
    background-repeat: $background_repeat;
    background-attachment: $background_attachment;
    background-size: $background_size;
}