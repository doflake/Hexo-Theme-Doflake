.aside-container {
    width: 240px;
    float: right;
    position: relative;
    display: flex;
    flex-direction: column;
}

@media screen and (max-width: 768px) {
    .aside-container {
        display: none;
    }
} 

.aisde-item {
    width: 100%;
    position: relative;
    padding-bottom: 40px;
}

.aside-author-container {
    height: 320px;
    margin-top: 40px;
    position: relative;
    display: flex;
    flex-direction: column;
    text-align: center;
    background-color: white;
    overflow: hidden;
}

.aside-author-avatar-background {
    width: 100%;
    height: 100px;
    overflow: hidden;
    img {
        background-repeat: no-repeat;
        background-size: cover;
        width: 240px;
        filter: blur(2px);
    }
}

.aside-author-avatar {
    width: 80px;
    position: relative;
    left: 80px;
    top: -50px;
    background-repeat:no-repeat;
    background-size: cover;
    border-radius: 40px;
}

.aside-author-title {
    position: relative; 
    top: -45px;
    font-size: 2em;
    font-weight: bold;
    color: var(--color-post-index-title);
}
.aside-author-title::before {
    background-color: var(--color-post-index-title);
}

.aside-author-subtitle {
    position: relative;
    top: -35px;
    color: var(--color-subtitle);
}

.aside-author-social {
    position: relative;
    top: -20px;
    display: flex;
    justify-content: center;
    line-height: 1.4;
    overflow: hidden;
    text-align: center;
    white-space: nowrap;
}

.aside-author-social-item {
    padding: 0 10px;

    a {
        text-decoration: none; 
        color: #505050; 
        font-size: 1.2em;
    }
}

.aside-author-social-num {
    display: block;
    font-size: 1.1em;
    font-weight: 600;
    text-align: center;
}

.aside-author-social-name {
    color: #999;
    font-size: 0.8125em;
}